[user]
    email = leonardof@tutanota.com
    name = Leonardo F.
[core]
    editor = vim
[merge]
    tool = vimdiff
[alias]
    s = status
    p = push
    histc = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    histg = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    aliases = config --get-regexp alias

    # https://www.christianengvall.se/untrack-files-local-repository-keep-origin-git/
	assume-unchanged = update-index --assume-unchanged
[difftool]
    prompt = false
[diff]
    tool = vimdiff
[commit]
	verbose = true
