# SETTINGS

set mouse=false

set format_title=%t
set format_current= %a %= %l
set format_trackwin=%3n. %t%= %d
set format_statusline= %{status} %{?d?%t %= %1{continue}%1{follow}%1{repeat}%1{shuffle} %{position} / %d}

# COLORS

set color_win_dir=5

set color_error=160

set color_info=136

set color_separator=0

set color_win_cur=28

set color_win_bg=default
set color_win_fg=default

set color_cmdline_bg=default
set color_cmdline_fg=default

set color_statusline_bg=default
set color_statusline_fg=default

set color_titleline_bg=default
set color_titleline_fg=28

set color_win_cur_sel_bg=default
set color_win_cur_sel_fg=28

set color_win_inactive_cur_sel_bg=default
set color_win_inactive_cur_sel_fg=28

set color_win_inactive_sel_bg=default
set color_win_inactive_sel_fg=default

set color_win_sel_bg=default
set color_win_sel_fg=28

set color_win_title_bg=default
set color_win_title_fg=0

# SHORTCUTS

unbind -f common <
unbind -f common >
bind common > player-next
bind common < player-prev
unbind -f common ^E
bind common ^E run st -e tagman {}
