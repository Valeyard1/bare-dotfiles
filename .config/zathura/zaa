set notification-error-bg       "#49b5b5" #08
set notification-error-fg       "#a9aeb4" #00

set notification-warning-bg     "#484f59" #08
set notification-warning-fg     "#a9aeb4" #00

#n sei praq serve isso
set highlight-color             "#3d4550" #0A
