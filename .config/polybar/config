label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = ÔÉ¢ reboot
menu-0-0-exec = menu-open-1
menu-0-1 = ÔÄë power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

;=========================================
;			VOID UPDATES
;=========================================
[module/updates-available]
type = custom/script
exec = $HOME/.config/polybar/updates.sh
click-left = urxvt -e sudo xbps-install -Su
format = <label>
format-background = ${colors.primary}
format-foreground = ${colors.foreground-alt}
format-padding = 1
interval = 300

;=========================================
;			REDSHIFT-STATUS
;=========================================
[module/redshift-info]
type = custom/script
format = <label>
format-background = ${colors.primary}
format-foreground = ${colors.foreground-alt}
format-padding = 1
#exec = $HOME/.config/polybar/redshift.sh
exec = $HOME/bin/redshift-status
interval = 5

;=========================================
;			BATTERY-NOTIFY
;=========================================
[module/battery-notify]
type = custom/script
exec = ~/.config/polybar/battery-notify
interval = 10

;========================================
;			CMUS
;========================================
[module/cmus]
type = custom/script

exec = bash ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
format-prefix = "ÔÄÅ"

interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

format = <label>
format-underline = ${colors.primary}
label = %output%

;=======================================
;			USB Drivers
;=======================================
[module/usb]
type = custom/script

exec = bash ~/.config/polybar/system-usb-udev.sh
interval = 1
